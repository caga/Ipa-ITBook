<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="rebuild" name="art_parameterizedcommands.jpx">
  <property name="dest" value="classes.ant"/>
  <property name="jstl.home" value="lib/jstl"/>
  <property name="servlet2.3.home" value="lib/servlet"/>
  <property name="src" value="src"/>
  <path id="project.class.path">
    <pathelement location="${dest}"/>
    <pathelement location="${jstl.home}/dom.jar"/>
    <pathelement location="${jstl.home}/jaxen-full.jar"/>
    <pathelement location="${jstl.home}/jaxp-api.jar"/>
    <pathelement location="${jstl.home}/jdbc2_0-stdext.jar"/>
    <pathelement location="${jstl.home}/jstl.jar"/>
    <pathelement location="${jstl.home}/sax.jar"/>
    <pathelement location="${jstl.home}/saxpath.jar"/>
    <pathelement location="${jstl.home}/standard.jar"/>
    <pathelement location="${jstl.home}/xalan.jar"/>
    <pathelement location="${jstl.home}/xercesImpl.jar"/>
    <pathelement location="${servlet2.3.home}/servlet.jar"/>
    <pathelement location="${java.home}/lib/rt.jar"/>
  </path>

  <!--Patternset to exclude files from the output directory:-->
  <patternset id="dest.exclude">
    <exclude name="Temporary_Files/"/>
    <exclude name="Generated Source/"/>
    <exclude name="package cache/"/>
    <exclude name="dependency cache/"/>
    <exclude name="jsp cache/"/>
  </patternset>

    <target name="to-run-this-sample" depends="init" >
        <echo>
        To run this sample, deploy the WAR file to a servlet engine and use
        the URI

                http://&lt;server-name&gt;:&lt;port-number&gt;/param-command/controller?cmd=listing


        For example, if you are using TomCat:

                http://localhost:8080/param-command/controller?cmd=listing


        See the sample's Readme.html for more information.
        </echo>
    </target>


  <target depends="init" name="javacompile">
    <javac bootclasspathref="project.class.path" debug="true" deprecation="true" destdir="${dest}" nowarn="false" target="1.1">
      <src path="${src}"/>
    </javac>
  </target>

  <target depends="resource" name="war">
    <war compress="false" destfile="param-command.war" webxml="root/WEB-INF/web.xml">
      <classes dir="${dest}">
        <patternset refid="dest.exclude"/>
        <include name="**/*.*"/>
      </classes>
      <fileset dir="root">
        <include name="**/*.aiff"/>
        <include name="**/*.asf"/>
        <include name="**/*.asp"/>
        <include name="**/*.asx"/>
        <include name="**/*.au"/>
        <include name="**/*.chtml"/>
        <include name="**/*.class"/>
        <include name="**/*.codestyle"/>
        <include name="**/*.css"/>
        <include name="**/*.dbxmi"/>
        <include name="**/*.ear"/>
        <include name="**/*.gif"/>
        <include name="**/*.htm"/>
        <include name="**/*.html"/>
        <include name="**/*.jar"/>
        <include name="**/*.jnlp"/>
        <include name="**/*.jpe"/>
        <include name="**/*.jpeg"/>
        <include name="**/*.jpg"/>
        <include name="**/*.js"/>
        <include name="**/*.jsp"/>
        <include name="**/*.library"/>
        <include name="**/*.mapxmi"/>
        <include name="**/*.mid"/>
        <include name="**/*.midi"/>
        <include name="**/*.png"/>
        <include name="**/*.ram"/>
        <include name="**/*.rar"/>
        <include name="**/*.rmf"/>
        <include name="**/*.schxmi"/>
        <include name="**/*.shtml"/>
        <include name="**/*.tblxmi"/>
        <include name="**/*.properties"/>
        <include name="**/*.tld"/>
        <include name="**/*.war"/>
        <include name="**/*.wav"/>
        <include name="**/*.wml"/>
        <include name="**/*.xmi"/>
        <include name="**/*.xml"/>
        <include name="**/*.zip"/>
        <exclude name="WEB-INF/"/>
      </fileset>
      <fileset dir="root">
        <exclude name="WEB-INF/web.xml"/>
        <include name="WEB-INF/*.*"/>
      </fileset>
      <lib dir="${jstl.home}">
        <include name="dom.jar"/>
        <include name="jaxen-full.jar"/>
        <include name="jaxp-api.jar"/>
        <include name="jdbc2_0-stdext.jar"/>
        <include name="jstl.jar"/>
        <include name="sax.jar"/>
        <include name="saxpath.jar"/>
        <include name="standard.jar"/>
        <include name="xalan.jar"/>
        <include name="xercesImpl.jar"/>
      </lib>
    </war>
  </target>

  <target name="cleanup">
    <delete file="emotherearth.war"/>
    <delete failonerror="false" includeemptydirs="true">
      <fileset dir="${dest}"/>
    </delete>
  </target>

  <target name="resource">
    <copy todir="${dest}">
      <fileset dir="${src}">
        <include name="**/*.jpe"/>
        <include name="**/*.jpeg"/>
        <include name="**/*.rmf"/>
        <include name="**/*.wav"/>
        <include name="**/*.mid"/>
        <include name="**/*.midi"/>
        <include name="**/*.au"/>
        <include name="**/*.gif"/>
        <include name="**/*.png"/>
        <include name="**/*.jpg"/>
        <include name="**/*.aiff"/>
        <include name="**/*.properties"/>
      </fileset>
    </copy>
  </target>

  <target name="javadoc"/>

  <target depends="cleanup" name="clean"/>

  <target name="precompile"/>

  <target depends="javacompile" name="compile"/>

  <target name="postcompile"/>

  <target depends="war,javadoc,resource" name="package"/>

  <target name="deploy"/>

  <target depends="precompile,compile,postcompile,package,deploy, to-run-this-sample" name="make"/>

  <target depends="clean,make" name="rebuild"/>

  <target name="init">
    <mkdir dir="${dest}"/>
  </target>

    <target name="setup-sample-database">
        <ant antfile="build-sample-data.xml" dir="." target="setup-sample-database" />
    </target>


</project>
